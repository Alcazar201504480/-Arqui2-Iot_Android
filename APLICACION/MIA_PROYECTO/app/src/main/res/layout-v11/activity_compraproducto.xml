<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_eventos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="curso.edu.eddgooglecalendar_201503422_201404200.CompraProducto"
    android:background="@drawable/principal"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="NOMBRE DEL PRODUCTO:"
        android:ems="10"
        android:id="@+id/vn"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText,LabelFor" />
    <TextView
        android:text="nit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/n"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textSize="14sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        android:layout_below="@+id/vn"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="PRECIO PRODUCTO:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vp"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/n"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="DPI"
        android:ems="10"
        android:id="@+id/p"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_below="@+id/vp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="CANTIDAD DEL PRODUCTO:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vc"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/p"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/c"
        tools:ignore="HardcodedText,LabelFor"
        android:layout_below="@+id/vc"
        android:layout_alignParentStart="true" />

    <Button
        android:text="CARGAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bcarga"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:textAlignment="textStart"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/c"
        android:layout_alignParentStart="true" />



</RelativeLayout>
